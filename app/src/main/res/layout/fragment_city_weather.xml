<?xml version="1.0" encoding="utf-8"?>

<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/swipe_refresh"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEB3B"
    tools:context=".CityWeatherFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/city_weather_frg"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
        <TextView
            android:id="@+id/frg_current_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15°C"
            android:textSize="50dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/frg_current_city"
            style="@style/todayItem"
            android:text="长沙"
            android:layout_below="@id/frg_current_temp"/>

        <TextView
            style="@style/todayItem"
            android:id="@+id/frg_current_weather"
            android:layout_below="@id/frg_current_city"
            android:text="晴"/>

        <TextView
           android:id="@+id/frg_current_time"
            style="@style/todayItem"
            android:layout_below="@id/frg_current_weather"
            android:text="2019-12-3"/>

        <TextView
             android:id="@+id/frg_current_timing"
             style="@style/todayItem"
             android:text="12:00"
             android:layout_below="@id/frg_current_weather"
             android:layout_toRightOf="@id/frg_current_time"
             android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/frg_current_wind"
            style="@style/todayItem"
            android:layout_below="@id/frg_current_time"
            android:text="西北风"/>

        <TextView
            android:id="@+id/frg_line1"
            android:layout_width="5dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@id/frg_current_wind"
            android:layout_toRightOf="@id/frg_current_wind"
            android:background="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/frg_current_temp_range"
            style="@style/todayItem"
            android:text="15°~ 2°"
            android:layout_toRightOf="@id/frg_line1"
            android:layout_alignBottom="@id/frg_current_wind"/>
            <ImageView
             android:id="@+id/frg_weather_icon"
             android:layout_width="120dp"
             android:layout_height="120dp"
             android:layout_marginTop="20dp"
             android:layout_marginRight="10dp"
             android:layout_alignParentRight="true"
             android:src="@drawable/oldman"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/gift"
                android:layout_toLeftOf="@id/frg_weather_icon"
                android:layout_marginRight="10dp"
                android:layout_marginTop="50dp"/>

            <ImageView
                android:id="@+id/snow1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/snow"
                android:layout_below="@id/frg_weather_icon"
                android:layout_marginTop="50dp"/>
            <ImageView
                android:id="@+id/snow2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/snow"
                android:layout_toRightOf="@id/snow1"
                android:layout_below="@id/frg_weather_icon"

                android:layout_marginTop="50dp"/>
            <ImageView
                android:id="@+id/snow3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/snow"
                android:layout_toRightOf="@id/snow2"
                android:layout_below="@id/frg_weather_icon"
                android:layout_marginTop="50dp"/>
            <ImageView
                android:id="@+id/snow4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/snow"
                android:layout_toRightOf="@id/snow3"
                android:layout_below="@id/frg_weather_icon"
                android:layout_marginTop="50dp"/>
            <ImageView
                android:id="@+id/snow5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/snow"
                android:layout_toRightOf="@id/snow4"
                android:layout_below="@id/frg_weather_icon"
                android:layout_marginTop="50dp"/>

            <ImageView
                android:id="@+id/snow6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/snow"
                android:layout_toRightOf="@id/snow5"
                android:layout_below="@id/frg_weather_icon"
                android:layout_marginTop="50dp"/>





        </RelativeLayout>
        <!-->用于显示未来3天的天气预报<-->
        <LinearLayout
            android:id="@+id/frg_middle_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_margin="30dp"
            android:background="#03A9F4">
        </LinearLayout>
        <!--用于显示指数信息的线性布局-->
        <LinearLayout
            android:id="@+id/frg_index_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="30dp"
            android:padding="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/index_wear"
                    style="@style/indexText"
                    android:text="穿衣指数"
                    android:drawableBottom="@mipmap/icon_cloth"/>
                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#2E8B57"/>
                <TextView
                    android:id="@+id/index_washCar"
                    style="@style/indexText"
                    android:text="洗车指数"
                    android:drawableBottom="@mipmap/icon_car"/>
                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#2E8B57"/>
                <TextView
                    android:id="@+id/index_cold"
                    style="@style/indexText"
                    android:text="旅游指数"
                    android:drawableBottom="@mipmap/icon_ganmao"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#2E8B57"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/index_sport"
                    style="@style/indexText"
                    android:text="运动指数"
                    android:drawableBottom="@mipmap/icon_sport"/>
                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#2E8B57"/>
                <TextView
                    android:id="@+id/index_rays"
                    style="@style/indexText"
                    android:text="紫外线指数"
                    android:drawableBottom="@mipmap/icon_light"/>
                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#2E8B57"/>
                <TextView
                    style="@style/indexText"/>
            </LinearLayout>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="2dp"
            android:id="@+id/recycler_view"
            android:background="#2196F3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>